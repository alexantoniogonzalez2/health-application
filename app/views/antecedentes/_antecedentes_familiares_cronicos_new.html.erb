<div class="modal-body" id="modal-container-ant-fam-cro-new">
	<div class="container ajustado">
    <div class="row clearfix">
      <div class="col-md-8 column">
        <%= render :partial => "persona/seleccionar_persona", :locals => {:persona => @persona, :id => 'cro', :id_pre => '', :clase => '', :subgrupo => 'cro' } %>             
      </div>
      <div class="col-md-4 column">
        <a id="modal-agregar-persona" href="#modal-container-agregar-persona-cro" role="button" class="btn" data-toggle="modal">O agregue una persona</a>
      </div>      
    </div>
    <div class='row padding-top'>
      <div class='column col-md-8'>        
        <label>Diagnóstico</label>:
        <select name="select_diag-cro-new"  id="select_diag-cro-new" class='select_diag float-right'>
          <option></option>
        </select> 
      </div>
      <div class='column col-md-4'>
        <div class="checkbox padding-left">
          <label for="no-frec-ant-fam-cro-new">
            <input type="checkbox" name="checkboxes" id="no-frec-ant-fam-cro-new" value="1"> Incluir diagnósticos no frecuentes
          </label>
        </div>
      </div>  
    </div>

    <div class="row padding-top">      
      <div class="column col-md-4">
        <div class="checkbox" id="enf_cro_new">
          <label class="checkbox-der" for="check-enf-cron-new"><input type="checkbox" name="checkboxes" id="check-enf-cron-new"> Enfermerdad crónica</label>
        </div>                
      </div>
    </div>

    <div class="row clearfix padding-top">
      <div class="col-md-3 column">
        <label>Fecha inicio</label>
      </div>
      <div class="col-md-5 column">
        <input type='text' class="form-control ajuste-posicion" id='fecha-afc-ini-new' placeholder='Ingresar fecha de inicio' />
      </div>  
      <div class="col-md-4 column">         
      </div>
    </div>
    <div class="row clearfix padding-top">
      <div class="col-md-3 column">
        <label>Fecha término</label>
      </div>
      <div class="col-md-5 column">
        <input type='text' class="form-control ajuste-posicion" id='fecha-afc-ter-new' placeholder='Ingresar fecha de término' />
      </div>
      <div class="col-md-4 column">         
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-md-12 column">             
        <label class="control-label" for="radios">Estado de diagnóstico</label>       
        <div class="form-group form-estado" id="e_d_cro-new">                    
          <% @estados_diagnostico.each do |e_d| %>            
            <label class="radio-inline" for="new-radios-cro-<%= e_d.id %>"><input type="radio" name="new-radios-estado-cro" value="<%= e_d.id %>" id="new-radios-cro-<%= e_d.id %>" > <%= e_d.nombre %></label>           
          <% end %>                
        </div>
      </div>
    </div>
    <div class="row clearfix">  
      <div class="col-md-12 column">  
        <label>Comentario</label>
        <textarea class="form-control" rows="3" id="comentario_new_cro"></textarea>
      </div>                  
    </div>

	</div>
</div>

<div class="modal fade" id="modal-container-agregar-persona-cro" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog ajuste-ancho">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" onclick="cerrarModalAgregarPersona('cro')" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Agregar persona</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => "persona/agregar_persona", :locals => {:origen => 'cro', :id => 'cro', :subgrupo => 'fam' } %>
      </div>
    </div>    
  </div>  
</div>

<%= javascript_include_tag "ant_fam" %>