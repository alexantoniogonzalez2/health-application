<%= link_to 'Agregar antecedente', agendamientoBuscadorHora_path %>
<% if @acceso %>
	<div class="panel panel-danger">
	  <div class="panel-heading">
	    <h3 class="panel-title">Historial de diagnósticos
	      <span class="head-text">Paciente: <%= @paciente.showName('%n%p%m') %></span></h3>    
	  </div>
	  <div class="panel-body panel-home">
			<table class="table table-striped table-bordered table-hover table-condensed">
				<thead class="ajust-head">
		      <tr><th class="col-sm-1">Fecha</th><th class="col-sm-2">Recinto</th><th class="col-sm-2">Profesional</th><th class="col-sm-3">Diagnóstico</th><th class="col-sm-1">Inicio</th><th class="col-sm-1">Término</th><th class="col-sm-1">Estado</th><th class="col-sm-1">Ver</th></tr>
		    </thead>
		    <tbody>
		      <% if @persona_diagnosticos.empty? %>
		        <tr><td colspan="7" >No hay información de diagnósticos anteriores.</td></tr>
		      <% end %>
		      <% @persona_diagnosticos.each do |p_d| %>
		        <tr>
		          <td><%= p_d.atencion_salud.agendamiento.fecha_comienzo.strftime('%Y-%m-%d') %></td>
		          <td><%= p_d.atencion_salud.agendamiento.especialidad_prestador_profesional.prestador.nombre %></td>
		          <td><%= p_d.atencion_salud.agendamiento.especialidad_prestador_profesional.profesional.showName('%n%p%m') %></td>                
		          <td><%= p_d.nombre %></td>
		          <td><%= p_d.fecha_inicio.strftime('%Y-%m-%d') %></td>
		          <td><%= p_d.fecha_termino ? p_d.fecha_termino.strftime('%Y-%m-%d') : '-' %></td>
		          <td><%= p_d.estado_diagnostico.nombre %></td>
		          <td><%= link_to 'Ver atención', atenciones_salud_path(p_d.atencion_salud.id) %></td>
		        </tr>
		      <% end %>
		    </tbody>
			</table>
		</div>
</div>
<% else %>
	<%= render :partial => "layouts/permiso" %>
<% end %>  