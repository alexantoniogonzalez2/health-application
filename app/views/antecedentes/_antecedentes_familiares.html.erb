<% if @acceso %>
<h4>Antecedentes familiares</h4>
  <% if @antecedentes_familiares.empty? %>
    No hay información de antecedentes familiares.
  <% else %>
		<table class="table table-striped table-hover table-condensed">
			<thead class="ajust-head">
	      <tr class="info" ><th class="col-sm-2">Persona</th><th class="col-sm-1">Parentesco</th><th class="col-sm-2">Diagnóstico</th><th class="col-sm-1">Descripción</th></tr>
	    </thead>
	    <tbody>
	    	<%= @antecedentes_familiares  %>

	    </tbody>    
		</table>
	<% end %><br/>	
	<%= link_to 'Agregar antecedente familiar', agendamientoBuscadorHora_path %>
<% else %>
	<%= render :partial => "layouts/permiso" %>
<% end %>  