<div class="modal fade" id="modal-container-ant-fam-mue-<%= deceso['id'] %>" role="dialog" aria-spanledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog ajuste-ancho">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" onclick="cerrarModalAntFamMue(<%= deceso['id'] %>)" aria-hidden="true">×</button>
        <h4 class="modal-title">Antecedentes familiares</h4>
      </div>
      <div class="modal-body">
				<div class="container ajustado">
          <div class='row'>
            <div class='column col-md-12'>
              <label>Nombre</label>: <%= deceso['persona'] %>                             
            </div>
          </div>
          <div class='row padding-top'>
            <div class='column col-md-12'>
              <label>Parentesco</label>: <span id="par-afm-<%= deceso['id'] %>" ><%= deceso['parentesco'] %></span>             
            </div>
          </div>
          <div class='row padding-top'>
            <div class='column col-md-12'>
              <label>Diagnóstico de deceso</label>: <%= deceso['diagnostico'] %>
            </div>
          </div>
          <div class='row padding-top'>
            <div class='column col-md-8 '>
              <label>Cambiar diagnóstico</label>:
              <select id="select_diag-afm-<%= deceso['id'] %>" class='select_diag float-right' >
                <option></option>
              </select>  
            </div>
            <div class='column col-md-4'>   
              <div class="checkbox padding-left">
                <label for="diag-no-frec-afm-<%= deceso['id'] %>">
                  <input type="checkbox" name="checkboxes" id="diag-no-frec-afm-<%= deceso['id'] %>" value='1' > Incluir diagnósticos no frecuentes
                </label>
              </div>
            </div>
          </div>
          <div class='row padding-top'>
            <div class='column col-md-3'>
              <label>Fecha deceso:</label>
            </div>
            <div class='column col-md-5'>
              <input type='text' class="form-control ajuste-posicion" id='fecha-afm-<%= deceso['id'] %>' placeholder='Ingresar fecha de deceso' value='<%= deceso['fecha_deceso'] %>' />
            </div>
            <div class='column col-md-4'>        
            </div>  
          </div>
				</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" onclick="cerrarModalAntFamMue(<%= deceso['id'] %>)">Cerrar ventana</button>
        <button type="button" id="agregar-ant-fam-mue-<%= deceso['id'] %>" class="btn btn-success cambiar_antecedente">Cambiar antecedente</button>
      </div>
    </div>            
  </div>        
</div>

<%= javascript_include_tag "ant_fam" %>