<% if @acceso %>
	<h4>Medicamentos</h4>
	  <% if @persona_medicamentos.empty? %>
      No hay información de prestaciones anteriores.<br/>
    <% else %>
			<table class="table table-striped table-hover table-condensed">
				<thead class="ajust-head">
		      <tr class='info'><th class="col-sm-2">Fecha</th><th class="col-sm-2">Recinto</th><th class="col-sm-2">Profesional</th><th class="col-sm-3">Diagnóstico</th><th class="col-sm-3">Medicamento</th><th class="col-sm-1">Posología</th><th class="col-sm-1">Atención</th></tr>
		    </thead>
		    <tbody>
		      <% @persona_medicamentos.each do |p_m| %>
		        <tr>
		          <td><%= p_m.atencion_salud.agendamiento.fecha_comienzo.strftime('%Y-%m-%d') %></td>
		          <td><%= p_m.atencion_salud.agendamiento.especialidad_prestador_profesional.prestador.nombre %></td>
		          <td><%= p_m.atencion_salud.agendamiento.especialidad_prestador_profesional.profesional.showName('%n%p%m') %></td> 
		          <td><%= p_m.persona_diagnostico.nil? ? '-' : p_m.persona_diagnostico.diagnostico.nombre %></td>               
		          <td><%= p_m.medicamento.nombre %></td>
		          <td><%= p_m.getPosologia %></td>
		          <td><%= link_to 'Ver', atenciones_salud_path(p_m.atencion_salud.id) %></td>
		        </tr>
		      <% end %>
		    </tbody>
			</table>
		<% end %>
		<%= link_to 'Agregar medicamento', agendamientoBuscadorHora_path %>
<% else %>
	<%= render :partial => "layouts/permiso" %>
<% end %>  