<%= link_to 'Agregar medicamento', agendamientoBuscadorHora_path %>
<% if @acceso %>
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Medicamentos
      <span class="head-text">Paciente: <%= @paciente.showName('%n%p%m') %></span></h3>    
  </div>
  <div class="panel-body panel-home">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead class="ajust-head">
	      <tr><th class="col-sm-1">Fecha atención</th><th class="col-sm-2">Recinto</th><th class="col-sm-2">Profesional</th><th class="col-sm-3">Diagnóstico</th><th class="col-sm-3">Medicamento</th><th class="col-sm-1">Posología</th><th class="col-sm-1">Ver</th></tr>
	    </thead>
	    <tbody>
	      <% if @persona_medicamentos.empty? %>
	        <tr><td colspan="7" >No hay información de prestaciones anteriores.</td></tr>
	      <% end %>
	      <% @persona_medicamentos.each do |p_m| %>
	        <tr>
	          <td><%= p_m.atencion_salud.agendamiento.fecha_comienzo.strftime('%Y-%m-%d') %></td>
	          <td><%= p_m.atencion_salud.agendamiento.especialidad_prestador_profesional.prestador.nombre %></td>
	          <td><%= p_m.atencion_salud.agendamiento.especialidad_prestador_profesional.profesional.showName('%n%p%m') %></td> 
	          <td><%= p_m.persona_diagnostico.nil? ? '-' : p_m.persona_diagnostico.diagnostico.nombre %></td>               
	          <td><%= p_m.medicamento.nombre %></td>
	          <td><%= p_m.getPosologia %></td>
	          <td><%= link_to 'Ver atención', atenciones_salud_path(p_m.atencion_salud.id) %></td>
	        </tr>
	      <% end %>
	    </tbody>
		</table>
	</div>
</div>
<% else %>
	<%= render :partial => "layouts/permiso" %>
<% end %>  