<% disabled = (tipo == 'edit') ? '' : 'disabled' %>
<div class="modal fade" id="modal-container-metricas" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div id="modal-dialog-metricas" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">
          Métricas
        </h4>
      </div>
      <div class="modal-body">
        <div class="tabbable" >
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#panel-metricas" data-toggle="tab">Ingresar datos</a>
            </li>
            <li>
              <a id="tabpanel-estatura" href="#panel-estatura" data-toggle="tab">Estatura</a>
            </li>
            <li>
              <a id="tabpanel-peso" href="#panel-peso" data-toggle="tab">Peso</a>
            </li>
            <li>
              <a id="tabpanel-IMC" href="#panel-IMC" data-toggle="tab">IMC</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="panel-metricas">
              <br>            
              <div class="container">
                <div class="row">
                  <div class="col-md-2 column padding-top-5">
                    <span>Estatura</span>
                  </div>
                  <div class="col-md-2 column">
                    <input id="estatura-<%= id %>" type="text" class="form-control metrica" value="<%= p_e %>" maxlength="5" size="5" onkeyup="guardarMetrica(<%= id %>,'estatura')" <%= disabled %> />
                  </div>
                  <div class="col-md-8 column padding-top-5">
                    <span class="text-med">centímetros (punto como separador de decimal)</span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2 column padding-top-5">
                    <span>Peso</span>
                  </div>
                  <div class="col-md-2 column">
                    <input id="peso-<%= id %>" type="text" class="form-control metrica" value="<%= p_p %>" maxlength="5" size="5" onkeyup="guardarMetrica(<%= id %>,'peso')" <%= disabled %> />
                  </div>
                  <div class="col-md-8 column padding-top-5">
                    <span class="text-med">kilos (punto como separador de decimal)</span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2 column padding-top-5">
                    <span>IMC</span>
                  </div>
                  <div class="col-md-2 column">
                    <input disabled id="imc-<%= id %>" type="text" class="form-control metrica" value="<%= p_imc %>" maxlength="5" size="5" />
                  </div>
                  <div class="col-md-8 column padding-top-5">
                    <span class="text-med">kilos/metros2</span>
                  </div>
                </div>
              </div>              
            </div>
            <div class="tab-pane" id="panel-estatura">              
              <div id="grafico_estatura" class="metricas" ></div>         
            </div>
            <div class="tab-pane" id="panel-peso">              
              <div id="grafico_peso" class="metricas"></div>            
            </div>
            <div class="tab-pane" id="panel-IMC">              
              <div id="grafico_IMC" class="metricas"></div>            
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar ventana</button>
      </div>
    </div>      
  </div>    
</div>

