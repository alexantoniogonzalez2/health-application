<% disabled = (@tipo == 'edit') ? '' : 'disabled' %>
<div class="modal fade" id="modal-container-metricas" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div id="modal-dialog-metricas" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">
          Métricas
        </h4>
      </div>
      <div class="modal-body">
        <div class="tabbable" >
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#panel-metricas" data-toggle="tab">Ingresar datos</a>
            </li>
            <li>
              <a id="tabpanel-estatura" href="#panel-estatura" data-toggle="tab">Gráfico estatura</a>
            </li>
            <li>
              <a id="tabpanel-peso" href="#panel-peso" data-toggle="tab">Gráfico peso</a>
            </li>
            <li>
              <a id="tabpanel-IMC" href="#panel-IMC" data-toggle="tab">Gráfico IMC</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="panel-metricas">            
              <table>
                <tr>
                  <td><span>Estatura</span></td>
                  <td>
                    <input id="estatura-<%= id %>" type="text" class="form-control metrica" value="<%= p_e %>" maxlength="4" size="4" onkeyup="calcularIMC(<%= id %>)" <%= disabled %> />
                  </td>
                  <td><span class="text-med">centimetros</span></td>
                </tr>
                <tr>
                  <td><span>Peso</span></td>
                  <td>
                    <input id="peso-<%= id %>" type="text" class="form-control metrica" value="<%= p_p %>" maxlength="4" size="4" onkeyup="calcularIMC(<%= id %>)" <%= disabled %> />
                  </td>
                  <td><span class="text-med">kilos</span></td>
                </tr>
                <tr>
                  <td><span>IMC</span></td>
                  <td><input disabled id="imc-<%= id %>" type="text" class="form-control metrica" value="<%= p_imc %>" maxlength="4" size="4" /></td>
                  <td><span class="text-med">kilos/metros2</span></td>
                </tr>
              </table>              
            </div>
            <div class="tab-pane" id="panel-estatura">              
              <div id="grafico_estatura" class="metricas" ></div>         
            </div>
            <div class="tab-pane" id="panel-peso">              
              <div id="grafico_peso" class="metricas"></div>            
            </div>
            <div class="tab-pane" id="panel-IMC">              
              <div id="grafico_IMC" class="metricas"></div>            
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar ventana</button>
         <button type="button" onclick="guardarMetricas(<%= id %>)" class="btn btn-success">Guardar métricas</button>
      </div>
    </div>      
  </div>    
</div>

