<h4>Lista de vacunas administradas</h4>
<% if @personas_vacunas.blank? %>
  No hay información de vacunas administradas.<br/>
<% else %>   
  <table id="tabla-persona-vacunas" class="table table-striped table-hover table-condensed">
    <thead>
      <tr class="info"><th class="col-sm-1">Edad</th><th class="col-sm-1">Vacuna</th><th class="col-sm-1">Fecha</th><th class="col-sm-1">Atención de salud</th></tr></thead>
    <tbody id='body-persona-vacuna'>
      <% if !@personas_vacunas.blank? %>
        <% @personas_vacunas.each do |persona_vacuna| %>
          <%= render :partial => "vacunas/persona_vacuna", :locals => {:persona_vacuna => persona_vacuna} %>
        <% end %>
      <% end %>  
    </tbody>    
  </table>
<% end %>

<%= render :partial => @partial_seguimiento, :locals => {:calendario_vacunas_persona => @calendario_vacunas_persona } unless @partial_seguimiento.blank? %> 
<%= javascript_include_tag "vacunas" %>

<h4>Calendarios de vacunación y otras vacunas</h4>
<div class="panel-group" id="panel-997829">
<% @agnos.each do |agno| %>  
  <div class="panel panel-info">
    <div class="panel-heading">
       <a class="panel-title" data-toggle="collapse" data-parent="#panel-997829" href="#panel-element-<%= agno.agno %>">Calendario de Vacunas <%= agno.agno %>
       </a>
    </div>
    <div id="panel-element-<%= agno.agno %>" class="panel-collapse collapse">
      <div class="panel-body">
        <table class="table table-striped table-hover table-condensed">
          <thead><tr><th>Edad</th><th>Vacuna</th><th>Protege contra</th></tr></thead>
          <tbody>
            <% @calendarios[agno.agno].each do |vacuna| %>
              <tr><td><%= vacuna[1]['edad'] %></td><td><%= vacuna[1]['nombre'] %></td><td><%= vacuna[1]['protege_contra'] %></td></tr>
            <% end %>
          </tbody>  
        </table>                  
      </div>
    </div>
  </div>  
<% end %>

<div class="panel panel-info">
  <div class="panel-heading">
     <a class="panel-title" data-toggle="collapse" data-parent="#panel-997829" href="#panel-element-otras">Enfermedades inmunoprevenibles según campaña, urgencia o epidemiologia</a>
  </div>
  <div id="panel-element-otras" class="panel-collapse collapse">
    <div class="panel-body">
      <table class="table table-striped table-hover table-condensed">
        <thead><tr><th>Vacuna</th><th>Tipo</th><th>Protege contra</th></tr></thead>
        <tbody>
          <% @otras_vacunas.each do |vacuna| %>
            <tr><td><%= vacuna['nombre'] %></td><td><%= vacuna['tipo'] %></td><td><%= vacuna['protege_contra'] %></td></tr>
          <% end %>
        </tbody>  
      </table>                   
    </div>
  </div>
</div>

</div>