<h4>Antecedentes laborales</h4>

<table class="table table-striped table-hover table-condensed">
	<thead class="ajust-head">
    <tr class="info" ><th class="col-sm-2">Fecha inicio</th><th class="col-sm-2">Fecha final</th><th class="col-sm-2">Ocupación</th><th class="col-sm-2">Tiempo total</th><th class="col-sm-1">Antecedente</th></tr>
  </thead>
  <tbody id='lista-ocu'>
  <% unless @ocupaciones.blank? %> 
		<% @ocupaciones.each do |ocu| %>
			<%= render :partial => "ocupaciones/ocupaciones_row", :locals => {:ocu => ocu } %>
		<% end %>
	<% else %>
		<tr id='tr-vacio-ocu'><td colspan='5' >No hay información de antecedentes laborales.</td></tr>
	<% end %>	
	</tbody>    
</table>


<a href="#modal-container-ocu-new" role="button" class="btn" data-toggle="modal">Agregar antecedente laboral</a>

<div id='ocu_modal-div'></div>

<% unless @ocupaciones.blank? %>
	<% @ocupaciones.each do |ocu| %>
		<%= render :partial => "ocupaciones/edit", :locals => { :ocu => ocu } %>
	<% end %>
<% end %>	

<div class="modal fade" id="modal-container-ocu-new" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog ajuste-ancho">
		<div class="modal-content">
			<div class="modal-header">
				 <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="cerrarModalOcu('new')">×</button>
				<h4 class="modal-title" id="myModalLabel">
					Agregar antecedente laboral
				</h4>
			</div>
			<div class="modal-body">
				<%= render :partial => "ocupaciones/new" %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" onclick="cerrarModalOcu('new')">Cerrar ventana</button>
				<button type="button" name="agregar" id="guardar-ocupacion-new" class="btn btn-success" onclick="guardarAntOcupacion('new')">Agregar antecedente</button>			  
			</div>
		</div>		
	</div>	
</div>

<%= javascript_include_tag 'ocupaciones' %>