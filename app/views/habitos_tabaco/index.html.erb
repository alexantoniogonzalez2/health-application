<h2>Consumo de cigarrillos realizados</h2>

<div class="container">
	<div class="row clearfix">
		<div class="col-md-4 column">Fecha inicio
		</div>
		<div class="col-md-4 column">Fecha final
		</div>
		<div class="col-md-4 column">Cigarros por día
		</div>
		<div class="col-md-4 column">Paquetes año
		</div>
	</div>
	<% @consumo.each do |cons| %>
		<div class="row clearfix">
			<div class="col-md-4 column"><%= cons.fecha_inicio.to_s(:date) %>
			</div>
			<div class="col-md-4 column"><%= cons.fecha_final.to_s(:date)  %>
			</div>
			<div class="col-md-4 column"><%= cons.cigarros_por_dia %>
			</div>
			<div class="col-md-4 column"><%= cons.paquetes_agno %>
			</div>
			<div class="col-md-4 column"><%= link_to 'Editar', {:controller => :habitos_alcohol, :action => 'edit', :id => cons.id }, :method => :get %>
			</div>
		</div>
	<% end %>	
</div>