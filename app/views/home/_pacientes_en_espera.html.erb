<% agendamientos = getPacientesEnEspera %>
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Pacientes en espera</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr><th>Paciente</th><th>Hora de atención</th><th>Acción</th></tr>
      </thead>
      <tbody>
      <% for agendamiento in agendamientos %>
        <tr>
          <td><%= agendamiento.persona.showName('%n%p%m') %></td>
          <td><%= agendamiento.fecha_comienzo %></td> 

          <% if existeAtencion(agendamiento.id) %>
            <td><%= button_to "Continuar atención", {:controller => :atenciones_salud,
            :action => 'editarAtencion', :id => getIdAtencion(agendamiento.id) }, :method => :post,class: "btn btn-xs btn-primary" %></td> 
          <% else %>    
            <td><%= button_to "Atender paciente", {:controller => :atenciones_salud,
            :action => 'crearAtencion', :id => agendamiento.id }, :method => :post,class: "btn btn-xs btn-success" %></td>     
          <% end %>

        </tr>
      <% end %>

      </tbody>
    </table>
   
  </div>
  <div class="panel-footer">
    Panel footer
  </div>
</div>



