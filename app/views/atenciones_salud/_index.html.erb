<% if @atenciones_salud.blank? %> 
  <h4>No hay atenciones de salud realizadas.</h4>
<% else %>
  <div id="div_atenciones" >
    <h4>Últimas atenciones de salud realizadas</h4>
    <table id="lista_atenciones" class="display" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Paciente</th>
          <th>Rut</th>          
          <th>Ver atención</th>
          <th>Reabrir atención</th>           
        </tr>
      </thead> 
      <tfoot>
        <tr>
          <th>Fecha</th>
          <th>Paciente</th>
          <th>Rut</th>          
          <th>Ver atención</th>
          <th>Reabrir atención</th>           
        </tr>
      <tfoot>
      <tbody> 
        <% @atenciones_salud.each do |atencion_salud| %>
          <tr>
            <td><%= atencion_salud.agendamiento.fecha_comienzo.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= atencion_salud.persona.showName('%n%p%m') %></td>
            <td><%= atencion_salud.persona.showRut %></td>            
            <td><%= link_to 'Ver', atenciones_salud_path(atencion_salud) %></td>
         		<td><%= link_to "Reabrir", {:controller => :atenciones_salud, :action => 'reabrirAtencion', :id_atencion => atencion_salud.id }, :method => :post %></td>
          </tr>
          <% end %>     
      </tbody> 
    </table>
  </div>
<% end %>  

<%= javascript_include_tag "atenciones_salud" %>

