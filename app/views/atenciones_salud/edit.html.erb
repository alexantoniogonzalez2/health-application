<input type="hidden" id="persona_id" value=<%= @agendamiento.persona.id  %> >

<div id="atencion-salud" class="panel panel-success">
<div class="panel-heading">
  <h3 class="panel-title"><span>Atención de Salud</span><span class='right'>Hora: <%= @agendamiento.fecha_comienzo.strftime('%H:%M') %> Profesional: <%= @agendamiento.especialidad_prestador_profesional.profesional.showName('%n%p%m') %> </span></h3>
</div>
<div class="panel-body">	

<div class="row">

<div class="col-md-6 div-form-atencion">

  <div class="container ajustado">
    <div class="row clearfix">
      <div class="col-md-7 column">
        <label>Paciente</label>: <%= @agendamiento.persona.showName('%n%p%m') %>
      </div>
      <div class="col-md-5 column">
        <label>Edad</label>: <%= @agendamiento.persona.age_text %>  
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-md-7 column">
       <label>Rut</label>: <%= @agendamiento.persona.showRut %>  
      </div>
      <div class="col-md-5 column">
       <label>Sexo</label>: <%= @agendamiento.persona.showSexo %>  
      </div>
    </div>
  </div>

<label>Antecedentes</label>
<%= link_to "Ver todos los antecedentes", {:controller => :antecedentes, :action => 'edit', :id => @agendamiento.id }, :method => :post %>

<div class"container">
  <div class="row clearfix">
    <div class="list-group col-md-4 column ajuste-ant">
      <a id="med" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-archive fa-fw fa-lg"></i><%= @texto_ant_med %></a>
      <a id="ale" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-shield fa-fw fa-lg"></i><%= @texto_alergias %></a>
      <a id="vac" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-magic fa-fw fa-lg"></i><%= @texto_vacunas %></a>
      <a id="ant_qui" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-magic fa-fw fa-lg"></i><%= @texto_ant_pro %></a>
    </div>
    <div class="list-group col-md-4 column ajuste-ant">
      <a id="act_fis" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-soccer-ball-o fa-fw fa-lg"></i><%= @persona_actividad_fisica.nivel_actividad %></a>
      <a id="hab_alc" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-beer fa-fw fa-lg"></i><%= @texto_alcohol %></a>
      <a id="hab_tab" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-magic fa-fw fa-lg"></i><%= @texto_tabaco %></a>
      <% if @agendamiento.persona.genero == 'Femenino' %>
        <a id="ant_gin" href="#" class="ellipsis list-group-item load_ant"><i class="fa fa-magic fa-fw fa-lg"></i>Ant. ginecológicos</a>
      <% end%>
    </div> 
    <div class="list-group col-md-4 column ajuste-ant2">
      <a id="ant_fam" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-users fa-fw fa-lg"></i>Ant. familiares</a>
      <a id="ant_soc" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-users fa-fw fa-lg"></i><%= @persona.getNivelEscolaridad %></a>
      <a id="ant_lab" href="#" data-toggle="modal" data-target="#myModal" class="ellipsis list-group-item load_ant"><i class="fa fa-money fa-fw fa-lg"></i><%= @texto_ocupaciones %></a>
    </div>
  </div>  
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header ajuste-modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Antecedentes del paciente</h4>
      </div>
      <div class="modal-body ajuste-height">
        <div id='contenido-ant'></div>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar ventana</button>
      </div>
    </div>
  </div>
</div> 

<div class="list-group" name="antecedentes-div" id="antecedentes-div">  
  <% @ant_med_at.each do |p_d| %>
    <%= render :partial => "persona_diagnostico/persona_diagnostico_anterior", :locals => {:p_d => p_d} %>
  <% end %>
  <% @ant_med_us.each do |p_d| %>
    <%= render :partial => "persona_diagnostico/persona_diagnostico_anterior", :locals => {:p_d => p_d} %>
  <% end %>
</div>
<div id="antecedentes-modal-div" >
  <% @ant_med_at.each do |p_d| %>
    <%= render :partial => "persona_diagnostico/persona_diagnostico_anterior_modal", :locals => {:p_d => p_d, :e_d => @estados_diagnostico} %>
  <% end %>
  <% @ant_med_us.each do |p_d| %>     
    <%= render :partial => "antecedentes/persona_diagnostico_modal", :locals => {:p_d => p_d } %>     
  <% end %>       
</div>
<a id="modal-ant-med" href="#modal-container-ant-med" role="button" class="btn" data-toggle="modal">Agregar otro antecedente médico</a><br>

<!-- Modal -->
<div class="modal fade" id="modal-container-ant-med" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header ajuste-modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Agregar otro antecedente médico</h4>
      </div>
      <div class="modal-body ajuste-height">

        <div class='container agregar-med'>
          <div class='row'>
            <div class='col-md-6 column'>
              <input type='hidden' id="select_diagnostico_ant" class="ajuste-select" >
                <div class="checkbox">
                  <label for="new-diag-no-frec-ant">
                    <input type="checkbox" name="checkboxes" id="new-diag-no-frec-ant" value="1">
                    Incluir diagnósticos no frecuentes
                  </label>
                </div>      
            </div>
          </div>
        </div>  
              
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar ventana</button>
      </div>
    </div>
  </div>
</div>  

<label>Diagnósticos recientes</label>

<div class="list-group" name="diagnostico-anterior-div" id="diagnostico-anterior-div">
  <% if @persona_diagnostico_anteriores.blank? %>
    No hay diagnósticos recientes.
  <% end %>  
  <% @persona_diagnostico_anteriores.each do |p_d| %>
    <%= render :partial => "persona_diagnostico/persona_diagnostico_anterior", :locals => {:p_d => p_d} %>
  <% end %>
</div>
<div id="diag_ant-modal-div" >
  <% @persona_diagnostico_anteriores.each do |p_d| %>
     <%= render :partial => "persona_diagnostico/persona_diagnostico_anterior_modal", :locals => {:p_d => p_d, :e_d => @estados_diagnostico} %>
  <% end %>      
</div>

<label>Motivo de consulta</label><span class="alert alert-info" id="auto-motivo" >Autoguardado</span>
<textarea id='motivo_consulta' class = "form-control" rows='3' cols='50'></textarea>
<label>Examen físico</label><span class="alert alert-info" id="auto-examen" >Autoguardado</span>
<textarea id='examen_fisic' class = "form-control" rows='3' cols='50'></textarea>
 
<a id="modal-metricas" href="#modal-container-metricas" role="button" class="btn" data-toggle="modal">Métricas</a>
<%= render :partial => "persona_metricas/metricas", :locals => {:id => @atencion_salud.id, :p_e => @estatura, :p_p => @peso, :p_imc => @imc, :p_pr => @presion} %>
 
</div>

